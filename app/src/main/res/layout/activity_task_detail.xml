<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.TaskDetailActivity">

    <include layout="@layout/toolbar"/>

    <TextView
        style="@style/Title3"
        android:text="Titulo:"
        android:layout_marginTop="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <EditText
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edt_task_title_detail"
        android:hint="Adicione um nome para a sua tarefa "/>

    <TextView
        style="@style/Title3"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="Descrição: "
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <EditText
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edt_task_description"
        android:hint="Adicione uma descrição para a sua tarefa"/>
    <Button
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:id="@+id/btn_done"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Concluir"
        style="@style/ButtonPrimary"
        android:layout_marginTop="16dp"/>

</LinearLayout>